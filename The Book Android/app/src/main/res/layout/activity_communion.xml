            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/caption1"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="the lord's prayer"
            android:textColor="#390C70"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            android:textAllCaps="true"
            android:layout_below="@+id/caption"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/priest"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All stand and the priest says:"
            android:textSize="12sp"
            android:textColor="#C10A3D"
            android:layout_below="@+id/caption1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/people"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="At the Saviour's command and formed by divine teaching, we dare to say:"
            android:textColor="#000"
            android:textSize="12sp"
            android:layout_below="@+id/priest"
            android:layout_marginLeft="10dp"/>

