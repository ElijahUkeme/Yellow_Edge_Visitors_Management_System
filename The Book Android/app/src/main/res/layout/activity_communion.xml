            android:id="@+id/our_caption"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_below="@+id/people"
            android:textSize="12sp"
            android:textColor="#000"
            android:layout_height="wrap_content"
            android:text="Our Father, who art in heaven,\nhallowed be thy name;\nthy kingdom come,\nthy will be done on earth, as it is in heaven.\nGive us this day our daily bread,\nand forgive us our trespasses,\nas we forgive those who trespass against us;\nand lead us not into temptation,\nbut deliver us from evil."
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/priest_start"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Priest:"
            android:textSize="12sp"
            android:textColor="#C10A3D"
            android:layout_below="@+id/our_caption"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/priest_starts"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deliver us, Lord, we pray, from every evil,"
            android:textColor="#000"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/our_caption"
            android:layout_marginLeft="55dp"/>

        <TextView
            android:id="@+id/start_cont"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
