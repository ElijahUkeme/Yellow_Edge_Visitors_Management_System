<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.elijah.ukeme.visitorsmanagement">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/yellow_age_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.VisitorsManagement">
        <activity android:name=".activity.MyVisitActivity"></activity>
        <activity android:name=".activity.ConfirmVisitActivity" />
        <activity android:name=".activity.SignUpActivity" />
        <activity android:name=".activity.CreateVisitActivity" />
        <activity android:name=".activity.AuthenticationActivity" />
        <activity android:name=".activity.ProfileActivity" />
        <activity android:name=".activity.DashboardActivity" />
        <activity android:name=".activity.RegisterActivity" />
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>